    "price": { "type": "number", "description": "Default price of the dish" },
    "temperature": { "type": "string", "description": "Serving temperature (e.g., hot, cold)" },
    "ingredients": { "type": "array", "items": { "type": "string" }, "description": "List of ingredients used" },
    "allergens": { "type": "array", "items": { "type": "string" }, "description": "Allergens present in the dish" },
    "dietary_restrictions": { "type": "array", "items": { "type": "string" }, "description": "Dietary accommodations (e.g., vegan, gluten-free)" },
    "substitutions": { "type": "array", "items": { "type": "string" }, "description": "Available ingredient substitutions" },
